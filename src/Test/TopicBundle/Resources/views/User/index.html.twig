<h1>User list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th>Salt</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
            <td>{{ user.username }}</td>
            <td>{{ user.password }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.salt }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                    </li>
                    {% if is_granted([ 'ROLE_ADMIN' ]) %}
                    <li>
                        <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                    </li>
                    {% endif %}
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% if is_granted([ 'ROLE_ADMIN' ]) %}
<ul>
    <li>
        <a href="{{ path('user_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endif %}