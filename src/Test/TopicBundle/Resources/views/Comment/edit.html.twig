{% extends 'TestTopicBundle::layout.html.twig' %}
{% block body -%}
    <h1>Comment edit</h1>
    <form action="{{ path('TestTopicBundle_comment_update', { 'id': comment.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <form action="{{ path('TestTopicBundle_comment_delete', { 'id': comment.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
