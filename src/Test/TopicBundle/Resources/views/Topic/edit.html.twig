{% extends 'TestTopicBundle::layout.html.twig' %}
{% block body -%}
    <h1>Topic edit</h1>
    <form action="{{ path('TestTopicBundle_topic_update', { 'id': topic.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('TestTopicBundle_topic') }}">
            Back to the list
        </a>
    </li>
    {% if is_granted('DELETE', topic) %}
    <li>
        <form action="{{ path('TestTopicBundle_topic_delete', { 'id': topic.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
        
    </li>
    {% endif %}
</ul>
{% endblock %}
