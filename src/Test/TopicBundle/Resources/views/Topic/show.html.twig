{% extends 'TestTopicBundle::layout.html.twig' %}

{% block title %}{{ topic.title }}{% endblock %}

{% block body %}
    <article class="topic">
        <header>
            <div class="date"><time datetime="{{ topic.created|date('c') }}">{{ topic.created|date('l, F j, Y') }}</time></div>
            <h2>{{ topic.title }}</h2>
        </header>
        <div>
            <p>{{ topic.body }}</p>
        </div>
    </article>
    <hr />
    <section class="comments" id="comments">
        <section class="previous-comments">
            <h3>Comments</h3>
            {% include 'TestTopicBundle:Comment:index.html.twig' with { 'comments': comments } %}
        </section>
        <hr />
        <h3>Add Comment</h3>
        {% render 'TestTopicBundle:Comment:new' with { 'topic_id': topic.id } %}
    </section>
{% endblock %}